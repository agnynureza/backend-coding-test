{
    "env": {
        "browser": true,
        "commonjs": true,
        "es6": true,
        "mocha": true
    },
    "extends": [
        "airbnb-base"
    ],
    "parserOptions": {
        "ecmaVersion": 2018,
        "ecmaFeatures": {
            "experimentalObjectRestSpread": true
        }
    },
    "rules": {
        "indent":[
            "error",
            4
        ],
        "semi": [
            "error",
            "always"
        ],
        "max-len": "off",
        "consistent-return":"off",
        "no-shadow":"off",
        "func-names": "off",
        "no-param-reassign":"off",
        "prefer-destructuring":"off",
        "no-unused-expressions": "off"
    }
}
